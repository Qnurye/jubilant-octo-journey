{
  "name": "jubilant-octo-journey",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --env-file=.env run --filter '*' dev",
    "build": "bun --env-file=.env run --filter '*' build",
    "lint": "bun run --filter '*' lint",
    "service-check": "bun --elide-lines=0 run --filter '@jubilant/database' infra-overview",
    "type-check": "bun run --filter '*' type-check",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules .next dist build out coverage",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}
